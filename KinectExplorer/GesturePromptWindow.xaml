<Window x:Class="Microsoft.Samples.Kinect.KinectExplorer.GesturePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GesturePromptWindow" Height="300" Width="500">
    <Grid>
        <DockPanel>
            <TextBlock Name="GesturePromptTxt" HorizontalAlignment="Center" FontSize="40" DockPanel.Dock="Top">
                Gesture Prompt
            </TextBlock>
            <Canvas DockPanel.Dock="Bottom" Height="200" Background="Black">
                <Rectangle Name="BeforeRect" Height="200" Width="100" Canvas.Left="0" Fill="Yellow"></Rectangle>
                <Rectangle Name="DuringRect" Height="200" Width="50" Canvas.Left="100" Fill="Red"></Rectangle>
                <Rectangle Name="AfterRect" Height="200" Width="100" Canvas.Left="150" Fill="Yellow"></Rectangle>
                <Rectangle Name="ProgressRect" Height="50" Width="125" Canvas.Left="0" Canvas.Top="150" Fill="Green"></Rectangle>

            </Canvas>
        </DockPanel>
    </Grid>
</Window>
