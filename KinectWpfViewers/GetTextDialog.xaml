<Window x:Class="Microsoft.Samples.Kinect.WpfViewers.GetTextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetTextDialog" Height="300" Width="300">
    <StackPanel>
        <Label Name="DescriptionLbl">
            Description:
        </Label>
        <TextBox Name="DialogText">
            
        </TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Name="OkButton" Width="100" Click="OkButton_Click">
                Ok
            </Button>
            <Button Name="CancelButton" Width="100" Click="CancelButton_Click">
                Cancel
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
